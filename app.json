{
  "expo": {
    "name": "FastFlix",
    "slug": "fastflix",
    "version": "0.1.2",
    "description": "AI-powered movie and TV show recommendations. Discover what to watch tonight with personalized suggestions based on your mood and preferences.",
    "orientation": "portrait",
    "icon": "./assets/app-images/icon.png",
    "scheme": "fastflix",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "category": "entertainment",
    "keywords": [
      "movies",
      "tv shows",
      "recommendations",
      "streaming",
      "entertainment",
      "AI"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fastflix.app",
      "buildNumber": "1"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/app-images/adaptive-icon/foreground.png",
        "backgroundImage": "./assets/app-images/adaptive-icon/background.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.fastflix.app",
      "versionCode": 1
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/app-images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/app-images/splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
